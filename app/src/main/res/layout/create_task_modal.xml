<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/task_edit_text_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_task"
        android:layout_marginTop="8dp"
        android:hint="Criar Título da Tarefa"
        android:textColorHighlight="#0000"
        android:background="@drawable/campoedittext"
        android:outlineProvider="none"
        android:textColorHint="#615959" />


    <EditText
        android:id="@+id/notes_edit_text_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_notes"
        android:layout_marginTop="8dp"
        android:hint="Adicione suas observações aqui"
        android:textColorHighlight="#0000"
        android:background="@drawable/campoedittext"
        android:outlineProvider="none"
        android:textColorHint="#615959" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/button_select_due_date_add"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:background="#70FF0000"
            android:text=""
            android:drawableRight="@drawable/ic_calendar" />

        <Button
            android:id="@+id/button_select_due_time_add"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:background="#70FF0000"
            android:text=""
            android:drawableRight="@drawable/ic_clock" />


        <Button
            android:id="@+id/button_add_task_add"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/notes_edit_text_add"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#4A9F82"
            android:text="Salvar"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>